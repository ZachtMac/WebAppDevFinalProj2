@inject IJSRuntime js

<div class="card"
     style="background-color:@(BackgroundColor ?? "White");color:@(TextColor ?? "Black");display:inline-block;width:@(Width ?? "200px")"
@onclick="@(() => AddMenuItemToCart(MenuItem.Id))">

    <div class="card-body">
        <h5 class="card-title">
            @MenuItem.Name
        </h5>
        <p class="card-text">
            Price: @MenuItem.Price.ToString("$###0.00")
        </p>
    </div>


</div>

@code {
    [Parameter]
    public MenuItemViewModel MenuItem { get; set; }

    [Parameter]
    public string BackgroundColor { get; set; }

    [Parameter]
    public string TextColor { get; set; }

    [Parameter]
    public string Width { get; set; }

    protected async void AddMenuItemToCart(int MenuItemId)
    {
        await js.InvokeVoidAsync("alert", $"The animal id of the animal clicked was {MenuItemId}");
    }
}